<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:orientation="vertical"
    tools:context=".BuyCoinActivity">

    <Button
        android:id="@+id/back"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:textSize="18sp"
        android:text="Go Back" />

    <Button
        android:id="@+id/coin10"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:textSize="18sp"
        android:text="Buy 10 Coins" />

    <Button
        android:id="@+id/coin20"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:textSize="18sp"
        android:text="Buy 20 Coins" />

    <Button
        android:id="@+id/coin30"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:textSize="18sp"
        android:text="Buy 30 Coins" />

    <Button
        android:id="@+id/coin50"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:textSize="18sp"
        android:text="Buy 50 Coins" />

    <Button
        android:id="@+id/coin100"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:textSize="18sp"
        android:text="Buy 100 Coins" />


</LinearLayout>